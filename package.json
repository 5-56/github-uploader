{
  "name": "github-uploader",
  "version": "1.0.0",
  "description": "一键上传文件夹到GitHub的桌面应用",
  "main": "main.js",
  "author": "GitHub Uploader",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "watch": "tailwindcss -i ./src/styles.css -o ./src/output.css --watch",
    "build:css": "tailwindcss -i ./src/styles.css -o ./src/output.css",
    "pack": "npm run build:css && electron-packager . GitHubUploader --platform=win32 --arch=x64 --out=dist --overwrite --asar"
  },
  "keywords": ["github", "uploader", "electron"],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-packager": "^17.1.2",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "simple-git": "^3.21.0"
  }
}
